{% block body %}
    <h1>Respuestas</h1>

    <table border="1">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ respuesta.id }}</td>
               
            </tr>
            <tr>
                <th>Enunciado</th>
                <td>{{respuesta.enunciado}}</td>
